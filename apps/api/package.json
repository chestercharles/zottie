{
  "name": "zottie-api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "dev-living-room": "wrangler dev --ip 0.0.0.0",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "tsc": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:eval": "vitest run --config vitest.eval.config.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply zottie-db --local",
    "reset:db": "rm -rf .wrangler/state/d1 && pnpm run db:migrate"
  },
  "dependencies": {
    "chanfana": "^2.6.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.6.20",
    "jose": "^6.1.3",
    "openai": "^6.16.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "22.13.0",
    "@types/service-worker-mock": "^2.0.4",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.58.0"
  }
}
